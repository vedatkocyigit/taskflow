pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
        timestamps()
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Kaynak kod Ã§ekiliyor'
                git branch: 'main',
                    url: 'https://github.com/vedatkocyigit/taskflow.git'
            }
        }

        stage('Build Backend') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-17'
                    reuseNode true
                }
            }
            steps {
                echo 'ğŸ›  Backend build'
                dir('backend') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Build Frontend') {
            agent {
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            steps {
                echo 'ğŸ¨ Frontend build'
                dir('frontend') {
                    sh 'npm ci'
                    sh 'npm run build'
                }
            }
        }

        stage('Unit Tests') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-17'
                    reuseNode true
                }
            }
            steps {
                echo 'ğŸ§ª Unit tests'
                dir('backend') {
                    sh 'mvn test -Punit'
                }
            }
        }

        stage('Integration Tests') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-17'
                    reuseNode true
                }
            }
            steps {
                echo 'ğŸ”— Integration tests'
                dir('backend') {
                    sh 'mvn verify -Pit'
                }
            }
        }

        stage('Start System (Docker Compose)') {
            steps {
                echo 'ğŸš€ Sistem ayaÄŸa kalkÄ±yor'
                sh 'docker compose down -v || true'
                sh 'docker compose up -d --build'
                sh 'sleep 20'
            }
        }

        stage('E2E Tests') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-17'
                    reuseNode true
                }
            }
            steps {
                echo 'ğŸ§­ E2E tests'
                dir('backend') {
                    sh 'mvn test -Pe2e'
                }
            }
        }
    }

    post {
        always {
            echo 'ğŸ§¹ Docker temizleniyor'
            sh 'docker compose down || true'
        }

        success {
            echo 'âœ… PIPELINE BAÅARILI'
        }

        failure {
            echo 'âŒ PIPELINE HATA ALDI'
        }
    }
}
