pipeline {
    agent any


    stages {

        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Kaynak kod Ã§ekiliyor'
                git branch: 'main',
                    url: 'https://github.com/vedatkocyigit/taskflow.git'
            }
        }

        stage('Build Backend') {
            steps {
                echo 'ğŸ›  Backend build'
                dir('backend') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                echo 'ğŸ¨ Frontend build'
                dir('frontend') {
                    sh 'npm ci'
                    sh 'npm run build'
                }
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'ğŸ§ª Unit testler'
                dir('backend') {
                    sh 'mvn test -Punit'
                }
            }
        }

        stage('Integration Tests') {
            steps {
                echo 'ğŸ§ª Integration testler'
                dir('backend') {
                    sh 'mvn verify -Pit'
                }
            }
        }

        stage('Start System (Docker Compose)') {
            steps {
                echo 'ğŸ³ Sistem ayaÄŸa kaldÄ±rÄ±lÄ±yor'
                sh 'docker compose down -v || true'
                sh 'docker compose up -d --build'
                echo 'â³ Servisler iÃ§in bekleniyor'
                sh 'sleep 20'
            }
        }

        stage('E2E Tests') {
            steps {
                echo 'ğŸ§ª E2E testler'
                dir('backend') {
                    sh 'mvn test -Pe2e'
                }
            }
        }
    }

    post {
        always {
            echo 'ğŸ§¹ Docker temizleniyor'
            sh 'docker compose down || true'
        }

        success {
            echo 'âœ… PIPELINE BAÅARILI'
        }

        failure {
            echo 'âŒ PIPELINE HATA ALDI'
        }
    }
}
