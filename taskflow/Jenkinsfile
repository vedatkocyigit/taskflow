pipeline {
    agent any

    stages {

        stage('Check & Install Dependencies') {
    steps {
        sh '''
        set -e

        echo "Ortam kontrol ediliyor..."

        command_exists() {
          command -v "$1" >/dev/null 2>&1
        }

        if ! command_exists java; then
          echo "Java yok"
          exit 1
        fi

        if ! command_exists mvn; then
          echo "Maven kuruluyor"
          apt-get update && apt-get install -y maven
        fi

        if ! command_exists node; then
          echo "Node.js kuruluyor"
          curl -fsSL https://deb.nodesource.com/setup_20.x | bash -
          apt-get install -y nodejs
        fi

        if ! command_exists npm; then
          echo "npm gelmedi (node kurulumu hatalı)"
          exit 1
        fi

        if ! command_exists docker; then
          echo "Docker CLI kuruluyor"
          apt-get update && apt-get install -y docker.io
        fi

        if ! docker compose version >/dev/null 2>&1; then
          echo "Docker Compose plugin kuruluyor"
          apt-get update && apt-get install -y docker-compose-plugin
        fi

        echo "Tüm bağımlılıklar hazır"
        '''
    }
}

        stage('Checkout') {
            steps {
                echo 'Kaynak kod çekiliyor'
                git branch: 'main',
                    url: 'https://github.com/vedatkocyigit/taskflow.git'
            }
        }

        stage('Build Backend') {
            steps {
                echo 'Backend build'
                dir('backend') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                echo 'Frontend build'
                dir('frontend') {
                    sh 'npm ci'
                    sh 'npm run build'
                }
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'Unit tests'
                dir('backend') {
                    sh 'mvn test -Punit'
                }
            }
        }

        stage('Integration Tests') {
            steps {
                echo 'Integration tests'
                dir('backend') {
                    sh 'mvn verify -Pit'
                }
            }
        }

        stage('Start System (Docker Compose)') {
            steps {
                echo 'Sistem ayağa kalkıyor'
                sh 'docker compose down -v || true'
                sh 'docker compose up -d --build'
                sh 'sleep 20'
            }
        }

        stage('E2E Tests') {
            steps {
                echo 'E2E tests'
                dir('backend') {
                    sh 'mvn test -Pe2e'
                }
            }
        }
    }

    post {
        always {
            echo 'Docker temizleniyor'
            sh 'docker compose down || true'
        }

        success {
            echo 'PIPELINE BAŞARILI'
        }

        failure {
            echo 'PIPELINE HATA ALDI'
        }
    }
}
