pipeline {
    agent any
    
    environment {
        PATH = "/opt/homebrew/bin:/usr/local/bin:${env.PATH}"
        JAVA_HOME = "/Library/Java/JavaVirtualMachines/jdk-17.jdk/Contents/Home"
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Kaynak kod çekiliyor'
                git branch: 'main',
                    url: 'https://github.com/vedatkocyigit/taskflow.git'
            }
        }
        stage('Build Backend') {
            steps {
                echo 'Backend build'
                dir('taskflow/backend') {
                    sh 'mvn clean compile'
                }
            }
        }
        stage('Build Frontend') {
            steps {
                echo 'Frontend build'
                dir('taskflow/frontend') {
                    sh 'npm ci'
                    sh 'npm run build'
                }
            }
        }
        stage('Unit Tests') {
            steps {
                echo 'Unit tests'
                dir('taskflow/backend') {
                    sh 'mvn test -Punit'
                }
            }
        }
        stage('Integration Tests') {
            steps {
                echo 'Integration tests'
                dir('taskflow/backend') {
                    sh 'mvn verify -Pit'
                }
            }
        }
        stage('Start System (Docker Compose)') {
            steps {
                dir('taskflow') {         
                    echo 'Docker temizleniyor'
                    sh 'docker compose down -v --remove-orphans || true'
                    sh 'docker system prune -af || true'
                    sh 'docker volume prune -f || true'
                    
                    echo 'Sistem ayağa kalkıyor'
                    sh 'docker compose up -d --build'
                    sh 'sleep 30'
                }
            }
        }
        stage('E2E Tests') {
            steps {
                echo 'E2E tests'
                dir('taskflow/backend') {
                    sh 'mvn test -Pe2e'
                }
            }
        }
    }
    post {
        always {
            echo 'Docker temizleniyor'
            dir('taskflow') {
                sh 'docker compose down || true'
            }
        }
        success {
            echo 'PIPELINE BAŞARILI'
        }
        failure {
            echo 'PIPELINE HATA ALDI'
        }
    }
}
